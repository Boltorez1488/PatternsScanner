<Window x:Class="PatternsScanner.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatternsScanner"
        mc:Ignorable="d"
        Title="Scanning Patterns" Height="126" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <ProgressBar x:Name="progress" HorizontalAlignment="Left" Height="25" Margin="10,40.96,0,0" VerticalAlignment="Top" Width="580"/>
        <Label x:Name="scanText" Content="Scanning..." HorizontalAlignment="Left" Margin="5,20,0,0" VerticalAlignment="Top" FontFamily="Consolas"/>
        <Button x:Name="stopBtn" Content="Stop" Height="40" Margin="198,75.46,188,0" VerticalAlignment="Top" Width="214" HorizontalAlignment="Center" Click="StopBtn_Click"/>
        <Label x:Name="counter" Content="0/0" Margin="10,40.96,0,0" VerticalAlignment="Top" Width="580" FontFamily="Consolas" HorizontalAlignment="Left" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
